@page
@model CreateModel
@{
    ViewData["Title"] = "Create";
}
<br />
<h2 class="text-info">Create New Stock Data</h2>
<br />

<div class="border container p-2">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Stock.TradeCode">Trade Code</label>
                <input type="text" class="form-control" asp-for="Stock.TradeCode" placeholder="Trade Code" />
                <span asp-validation-for="Stock.TradeCode" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Stock.TradeDate">Trade Date</label>
                <input type="datetime-local" class="form-control" asp-for="Stock.TradeDate" placeholder="Trade Date-Time" />
                <span asp-validation-for="Stock.TradeDate" class="text-danger"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-2">
                <label asp-for="Stock.Open"> Open </label>
                <input type="number" class="form-control" asp-for="Stock.Open" />
                <span asp-validation-for="Stock.Open" class="text-danger"></span>
            </div>
            <div class="form-group col-md-2">
                <label asp-for="Stock.High"> High </label>
                <input type="number" class="form-control" asp-for="Stock.High" />
                <span asp-validation-for="Stock.High" class="text-danger"></span>
            </div>
            <div class="form-group col-md-2">
                <label asp-for="Stock.Low"> Low </label>
                <input type="number" class="form-control" asp-for="Stock.Low" />
                <span asp-validation-for="Stock.Low" class="text-danger"></span>
            </div>
            <div class="form-group col-md-2">
                <label asp-for="Stock.Close"> Close </label>
                <input type="number" class="form-control" asp-for="Stock.Close" />
                <span asp-validation-for="Stock.Close" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Stock.Volume">Volume</label>
                <input type="text" class="form-control" asp-for="Stock.Volume" />
                <span asp-validation-for="Stock.Volume" class="text-danger"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="col-3 offset-3">
                <input type="submit" value="Create" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control">Back to Table</a>
            </div>
        </div>
    </form>
</div>
@section Scripts{ 
    <partial name="_ValidationScriptsPartial" />
}